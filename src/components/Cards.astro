---
import ContactCards from "./cards/ContactWrapper.astro";
import NormalCards from "./cards/NormalWrapper.astro";
import { ContactCardsInfo, NormalCardsInfo } from "./cards/types";

export interface Props {
  cards: NormalCardsInfo | ContactCardsInfo;
}

const Props = Astro.props as Props;
---

{
  Props.cards.type === "normal" ? (
    <NormalCards {...Props.cards} />
  ) : (
    <ContactCards {...Props.cards} />
  )
}
