---
import Downloads from "../../data/downloads.json";
import Layout from "../../layouts/Layout.astro";
import { Addons as BedrockAddons } from "./_components/bedrock/Addons";
import { Addons as JavaAddons } from "./_components/java/Addons";
import { Content as Installation } from "./_install.md";

const title = "Downloads";
const description = "Download Love & Tolerance resource pack for Minecraft Java and Bedrock editions";
const menuEntry = "Downloads";
---

<Layout title={title} description={description} menuEntry={menuEntry}>
  <JavaAddons client:only="solid-js" />

  <hr />

  <BedrockAddons client:only="solid-js" />

  <h2>Old Java Edition releases</h2>

  <div class="java-releases flex flex--row flex--small">
    {Object.entries(Downloads.java).map(([version, url]) => <a href={url}>{version}</a>)}
  </div>

  <Installation />
</Layout>

<style lang="scss">
  .java-releases {
    a {
      background: var(--color-light);
      border: 1px solid var(--color-light-border);
      border-radius: 0.25em;
      display: inline-block;
      padding: 0.125em 0.5em;
    }
  }

  hr {
    border: 1px solid var(--color-light-border);
  }
</style>
