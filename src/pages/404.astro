---
import Layout from "../layouts/Layout.astro";

const title = "Page not found";
const description =
  "You've discovered a page that doesn't exist. Make sure you have the correct link.";
---

<Layout title={title} description={description}>
  <div class="container">
    <div class="number">404</div>
    <div class="title">{title}</div>
    <div class="description">{description} Or use navigation at the top.</div>
    <div class="actions">
      <a href="/">Go home</a>
    </div>
  </div>
</Layout>

<style lang="scss">
  .container {
    text-align: center;

    display: flex;
    gap: var(--margin);
    flex-direction: column;
    justify-content: center;
  }

  .number {
    color: var(--color-primary);
    font-size: 10em;
    font-weight: bold;
  }

  .title {
    font-size: 2em;
    font-weight: bold;
  }

  .description {
    font-size: 1.25em;
  }

  .actions a {
    background: var(--color-primary);
    border-radius: var(--border-radius);
    color: var(--color-white) !important;
    display: inline-block;
    font-size: 1.25em;
    padding: 0.5em 1em;
  }
</style>
